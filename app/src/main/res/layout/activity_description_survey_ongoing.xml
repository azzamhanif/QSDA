<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <!--Top-->
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <include layout="@layout/layout_top"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title of Survey"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:text="Description of survey"
                    android:layout_gravity="top"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="8dp"
                    android:background="@drawable/white_grey_border"
                    android:text="Desctiption of survey here!! "/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Target location"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Target location here"
                    android:paddingLeft="8dp"
                    android:paddingTop="5dp"
                    android:background="@drawable/white_grey_border"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Month and year"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Date here"
                    android:paddingLeft="8dp"
                    android:paddingTop="5dp"
                    android:background="@drawable/white_grey_border"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Deadline"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Deadline here"
                    android:paddingLeft="8dp"
                    android:paddingTop="5dp"
                    android:background="@drawable/white_grey_border"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Number of Population"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="5dp"
                    android:text="Number of population here"
                    android:background="@drawable/white_grey_border"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Size of Sample"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Size of sample here"
                    android:paddingLeft="8dp"
                    android:paddingTop="5dp"
                    android:background="@drawable/white_grey_border"/>


            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Surveyor Placement"
                android:layout_marginTop="20dp"
                android:onClick="SurveyPlacement"
                android:textAllCaps="false"
                android:background="@drawable/background_content_button3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/background_content_button"
                    android:onClick="backHome"
                    android:layout_gravity="start"
                    android:text="Back"
                    android:textColor="@android:color/white" />

                <!--<RelativeLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:gravity="right">-->
                    <!--<Button-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="35dp"-->
                        <!--android:background="@drawable/background_content_button"-->
                        <!--android:text="Analysis"-->
                        <!--android:onClick="Analysis"-->
                        <!--android:textColor="@android:color/white" />-->
                <!--</RelativeLayout>-->
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>