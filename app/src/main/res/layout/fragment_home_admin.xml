<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp">
            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/background_content_button">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_money"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Q-Pay"
                        android:textSize="23sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white"
                        android:layout_centerInParent="true"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp. 0"
                            android:textSize="23sp"
                            android:textColor="@android:color/white"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>


                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_content_button2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="55dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/payment"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pay"
                        android:layout_gravity="center"
                        android:textSize="18sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:src="@drawable/topup"
                        android:layout_marginRight="55dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top-Up"
                        android:layout_marginRight="52.5dp"
                        android:textSize="17sp"/>

                </LinearLayout>


            </LinearLayout>
            <RelativeLayout
                android:layout_width="350dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#4db8ff"/>

            <Button
                android:id="@+id/bt_newSurvey"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="New Survey"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:background="@drawable/background_content_button"
                android:layout_marginTop="20dp"
                android:onClick="newSurvey" />

            <!--Survey survey-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:onClick="DescriptionSurvey"
                android:background="@drawable/white_grey_border">

                <TextView
                    android:id="@+id/judulSurvey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title of Survey"
                    android:layout_centerHorizontal="true"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_below="@id/tanggalSurvey"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tanggalSurvey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="26/07/2019"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="On going"
                    android:textAlignment="center"
                    android:layout_below="@id/judulSurvey"
                    android:background="@drawable/background_content_button2"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:onClick="DescriptionSurvey1"
                android:background="@drawable/white_grey_border">

                <TextView
                    android:id="@+id/judulSurvey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Machinesâ€™ Production Average Sampling"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_below="@id/tanggalSurvey"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/tanggalSurvey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="25/07/2019"/>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_delete"
                    android:layout_below="@id/judulSurvey"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:textAlignment="center"
                    android:layout_below="@id/judulSurvey"
                    android:textColor="@android:color/white"
                    android:background="@drawable/background_content_button"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:onClick="DescriptionSurvey"
                android:background="@drawable/white_grey_border">

                <TextView
                    android:id="@+id/judulSurvey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title of Survey"
                    android:layout_centerHorizontal="true"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_below="@id/tanggalSurvey"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tanggalSurvey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="24/07/2019"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="On going"
                    android:textAlignment="center"
                    android:layout_below="@id/judulSurvey"
                    android:background="@drawable/background_content_button2"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:onClick="DescriptionSurvey2"
                android:background="@drawable/white_grey_border">

                <TextView
                    android:id="@+id/judulSurvey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of Patients between Two Different Hospitals"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_below="@id/tanggalSurvey"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/tanggalSurvey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="23/07/2019"/>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_delete"
                    android:layout_below="@id/judulSurvey"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:textAlignment="center"
                    android:layout_below="@id/judulSurvey"
                    android:textColor="@android:color/white"
                    android:background="@drawable/background_content_button"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:onClick="DescriptionSurvey3"
                android:background="@drawable/white_grey_border">

                <TextView
                    android:id="@+id/judulSurvey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exam Score Before and After Taking Extra Courses"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_below="@id/tanggalSurvey"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/tanggalSurvey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="22/07/2019"/>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_delete"
                    android:layout_below="@id/judulSurvey"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:textAlignment="center"
                    android:layout_below="@id/judulSurvey"
                    android:textColor="@android:color/white"
                    android:background="@drawable/background_content_button"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>