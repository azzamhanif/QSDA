                <!--android:orientation="vertical"-->
                <!--android:padding="10dp">-->

                <!--<TextView-->
                <!--android:id="@+id/deskripsi"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Description of Survey"-->
                <!--android:textSize="30sp"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:textColor="@android:color/black"/>-->


                <!--&lt;!&ndash;Bottom&ndash;&gt;-->
                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:orientation="horizontal"-->
                <!--android:background="@drawable/background_content"-->
                <!--android:id="@+id/linearLayout">-->
                <!--<RelativeLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content">-->

                <!--</RelativeLayout>-->

                <!--</LinearLayout>-->


                <!--</RelativeLayout>-->
            </LinearLayout>

            <TextView
                android:id="@+id/nama_surveyor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="Surveyor Placement : Hospital A"/>

            <!--Bottom-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:background="@drawable/background_content"
                android:id="@+id/layout_bawah">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/background_content_button"
                        android:onClick="backHome"
                        android:text="Back"
                        android:textColor="@android:color/white" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>